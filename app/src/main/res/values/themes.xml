<resources>
     <!-- Base application theme. -->
     <style name="Theme.Mobiware" parent="Theme.MaterialComponents.Light.NoActionBar">
          <!-- Primary brand color. -->
          <item name="fontFamily">@font/dosis_medium</item>
          <item name="colorPrimary">@color/cyan</item>
          <item name="colorPrimaryVariant">@color/cyan</item>
          <item name="colorOnPrimary">@color/cyan</item>
          <!-- Secondary brand color. -->
          <item name="colorSecondary">@color/teal_200</item>
          <item name="colorSecondaryVariant">@color/teal_700</item>
          <item name="colorOnSecondary">@color/black</item>
          <!-- Status bar color. -->
          <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
          <item name="android:textColor">@color/cyan</item>
          <!-- EditText color -->
          <item name="colorOnSurface">#000</item>
     </style>


     <style name="Theme.SpecialButton" parent="ThemeOverlay.Material3.Button">
          <item name="cornerRadius">@dimen/_14sdp</item>
          <item name="android:textStyle">bold</item>
          <item name="android:textSize">@dimen/button_text_size</item>
          <item name="android:textColor">@color/white_</item>
          <item name="backgroundTint">@color/blue_</item>
     </style>

     <style name="Theme.SpecialOutButton" parent="Widget.Material3.Button.OutlinedButton">
          <item name="android:textColor">@color/blue</item>
          <item name="android:textSize">@dimen/_13ssp</item>
          <item name="strokeWidth">@dimen/_1sdp</item>
          <item name="strokeColor">@color/blue</item>
     </style>

     <style name="Theme.SpecialTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
          <item name="boxCornerRadiusTopEnd">@dimen/_20sdp</item>
          <item name="boxCornerRadiusTopStart">@dimen/_20sdp</item>
          <item name="boxCornerRadiusBottomEnd">@dimen/_20sdp</item>
          <item name="boxCornerRadiusBottomStart">@dimen/_20sdp</item>
          <item name="colorOnSurface">#fff</item>
          <item name="hintTextColor">@color/teal_200</item>
     </style>

     <style name="SpecialEdiText">
          <item name="android:textSize">@dimen/default_text_size</item>
          <item name="android:textColor">@color/black</item>
     </style>

     <style name="OutlinedCardView">
          <item name="strokeColor">@color/cyan</item>
          <item name="strokeWidth">@dimen/_1sdp</item>
          <item name="contentPadding">@dimen/cv_text_margin_settings</item>
          <item name="cardCornerRadius">0dp</item>
          <item name="android:focusable">true</item>
          <item name="android:clickable">true</item>
     </style>

     <style name="ActionBarTextStyle">
          <item name="android:textSize">@dimen/toolbar_text_size</item>
          <item name="fontFamily">@font/dosis_bold</item>
          <item name="android:letterSpacing">0.1</item>
     </style>

     <style name="MainNavView">
          <item name="android:textStyle">normal</item>
          <item name="fontFamily">@font/dosis_bold</item>
          <item name="android:letterSpacing">0.05</item>
     </style>

</resources>