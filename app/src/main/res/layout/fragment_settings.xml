<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:paddingHorizontal="@dimen/layout_padding_horizontal_settings"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:background="@drawable/artboard_1"
     android:layout_height="match_parent"
     tools:context=".ui.fragments.main.FragmentSettings">


     <com.google.android.material.card.MaterialCardView
          android:id="@+id/cv_night_mode_settings"
          style="@style/Theme.OutlinedCardView"
          android:layout_margin="@dimen/cv_margin_settings"
          android:background="?attr/selectableItemBackground"
          android:focusable="true"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
               android:layout_margin="@dimen/cv_text_margin_settings"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="@string/dark_mode"
               android:textColor="@color/teal_700"
               android:textSize="@dimen/settings_text_size"/>

     </com.google.android.material.card.MaterialCardView>


     <com.google.android.material.card.MaterialCardView
          android:id="@+id/cvResetPasswordSettings"
          android:background="?attr/selectableItemBackground"
          android:layout_margin="@dimen/cv_margin_settings"
          android:focusable="true"
          android:layout_width="match_parent"
          style="@style/Theme.OutlinedCardView"
          android:layout_height="wrap_content">

          <TextView
               android:layout_margin="@dimen/cv_text_margin_settings"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="@string/reset_password"
               android:textColor="@color/teal_700"
               android:textSize="@dimen/settings_text_size"/>

     </com.google.android.material.card.MaterialCardView>

     <com.google.android.material.card.MaterialCardView
          style="@style/Theme.OutlinedCardView"
          android:id="@+id/cvDeleteAccountSettings"
          android:layout_margin="@dimen/cv_margin_settings"
          android:focusable="true"
          android:background="?attr/selectableItemBackground"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
               android:layout_margin="@dimen/cv_text_margin_settings"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="@string/delete_account"
               android:textColor="@color/teal_700"
               android:textSize="@dimen/settings_text_size"/>

     </com.google.android.material.card.MaterialCardView>

     <com.google.android.material.card.MaterialCardView
          android:layout_margin="@dimen/cv_margin_settings"
          style="@style/Theme.OutlinedCardView"
          android:focusable="true"
          android:id="@+id/cvContactSettings"
          android:background="?attr/selectableItemBackground"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
               android:layout_margin="@dimen/cv_text_margin_settings"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="@string/contact"
               android:textColor="@color/teal_700"
               android:textSize="@dimen/settings_text_size"/>

     </com.google.android.material.card.MaterialCardView>

</LinearLayout>