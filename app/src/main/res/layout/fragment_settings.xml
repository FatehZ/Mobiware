          android:background="?attr/selectableItemBackground"
          app:cardBackgroundColor="@color/cv_settings_background">

          <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                    android:id="@+id/tvRateUseless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tv_settings_margin_start"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingVertical="@dimen/tv_settings_padding_vertical"
                    android:text="@string/rate_app"
                    android:textColor="@color/settings_text_color"
                    android:textSize="@dimen/settings_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv2UL"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

               <ImageView
                    android:id="@+id/iv2UL"
