<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:paddingTop="@dimen/fragments_top_padding_actionbar_bigger"
     android:background="@drawable/artboard_main_background"
     android:orientation="vertical"
     tools:context=".ui.fragments.main.FragmentSettings">


     <com.google.android.material.card.MaterialCardView
          android:id="@+id/cv_night_mode_settings"
          style="@style/OutlinedCardView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="@dimen/cv_margin_settings"
          android:background="?attr/selectableItemBackground"
          app:cardBackgroundColor="@color/cv_settings_background">

          <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">


               <TextView
                    android:id="@+id/tvApplicationUseless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tv_settings_margin_start"
                    android:paddingVertical="@dimen/tv_settings_padding_vertical"
                    android:text="@string/application_theme"
                    android:textColor="@color/settings_text_color"
                    android:textSize="@dimen/settings_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv1UL"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

               <ImageView
                    android:id="@+id/iv1UL"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/application_theme"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_theme"
                    app:layout_constraintBottom_toBottomOf="@+id/tvApplicationUseless"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvApplicationUseless"
                    app:layout_constraintTop_toTopOf="@+id/tvApplicationUseless" />

          </androidx.constraintlayout.widget.ConstraintLayout>

     </com.google.android.material.card.MaterialCardView>

     <com.google.android.material.card.MaterialCardView
          android:id="@+id/cvRateAppSettings"
